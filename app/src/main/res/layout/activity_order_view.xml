<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderView">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/orderViewTitleContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/orderViewStatus"
                    android:layout_width="@dimen/row_status_icon_size"
                    android:layout_height="@dimen/row_status_icon_size"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/orderIcon"
                    app:srcCompat="@drawable/ic_status_pending"
                    android:tint="#000"
                    android:alpha="0.5"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/orderViewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="@string/orderNameTemp"
                    android:textSize="18sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toStartOf="@+id/orderViewDate"
                    card_view:layout_constraintStart_toEndOf="@+id/orderViewStatus"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/orderViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="end"
                    android:text="DD/MM/YY"
                    android:textSize="12sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_person"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_phone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+94 77 123 1234"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_email"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="example@email.com"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:layout_constraintTop_toBottomOf="@id/card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:id="@+id/subTotalTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Sub-Total"
                    android:textSize="13sp"
                    card_view:layout_constraintEnd_toStartOf="@+id/subTotalValue"
                    card_view:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/subTotalValue"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="$ 22.00"
                    android:textSize="13sp"
                    card_view:layout_constraintRight_toRightOf="parent"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:id="@+id/orderDeilveryTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Delivery Charge"
                    android:textSize="13sp"
                    card_view:layout_constraintEnd_toStartOf="@+id/orderDeliveryValue"
                    card_view:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/orderDeliveryValue"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="$ 0.00"
                    android:textSize="13sp"
                    card_view:layout_constraintRight_toRightOf="parent"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:id="@+id/orderTaxesTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Taxes"
                    android:textSize="13sp"
                    card_view:layout_constraintEnd_toStartOf="@+id/orderTaxesValue"
                    card_view:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/orderTaxesValue"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="$ 5.10"
                    android:textSize="13sp"
                    card_view:layout_constraintRight_toRightOf="parent"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/orderTotalTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Total"
                    android:textSize="16sp"
                    card_view:layout_constraintBaseline_toBaselineOf="@+id/orderTotalValue"
                    card_view:layout_constraintEnd_toStartOf="@+id/orderTotalValue"
                    card_view:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/orderTotalValue"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:text="$ 27.10"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@+id/card_view2">
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
